{
  "name": "serve-directory",
  "version": "4.0.0",
  "description": "Serve directory listings",
  "homepage": "https://github.com/fisker/serve-directory#readme",
  "bugs": {
    "url": "https://github.com/fisker/serve-directory/issues"
  },
  "repository": "fisker/serve-directory",
  "funding": "https://github.com/fisker/serve-directory?sponsor=1",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup --config",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dev": "rollup --config --watch",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "example": "cross-env DEBUG=serve-directory node example",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "format:stylelint": "yarn lint:stylelint --fix",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,cjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,cjs,mjs,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "lint:stylelint": "stylelint \"**/*.{css,scss,less}\"",
    "release": "run-s clean lint build test format dist",
    "test": "run-p test:*",
    "test-coverage": "nyc mocha",
    "test:js": "mocha -r esm"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "mocha": {
    "bail": true,
    "checkLeaks": true,
    "require": "esm"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "dependencies": {
    "accepts": "1.3.7",
    "debug": "4.3.1",
    "http-errors": "1.8.0",
    "lodash.template": "4.5.0",
    "mime-types": "2.1.28",
    "parseurl": "1.3.3"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "@commitlint/cli": "11.0.0",
    "@fisker/commitlint-config": "1.3.1",
    "@fisker/eslint-config": "4.1.1",
    "@fisker/eslint-config-mocha": "1.2.1",
    "@fisker/husky-config": "4.0.1",
    "@fisker/lint-staged-config": "3.0.1",
    "@fisker/prettier-config": "4.0.1",
    "@fisker/stylelint-config": "2.3.2",
    "@rollup/plugin-commonjs": "17.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "11.0.1",
    "chai": "4.2.0",
    "cz-conventional-changelog": "3.3.0",
    "del-cli": "3.0.1",
    "eslint": "7.18.0",
    "esm": "3.2.25",
    "get-port": "5.1.1",
    "husky": "4.3.8",
    "lint-staged": "10.5.3",
    "markdownlint-cli": "0.26.0",
    "mocha": "8.2.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "open": "7.3.1",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "rollup": "2.36.1",
    "rollup-plugin-babel": "4.4.0",
    "sort-package-json": "1.48.1",
    "stylelint": "13.8.0",
    "supertest": "6.1.1"
  },
  "engines": {
    "node": ">= 6"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
