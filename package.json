{
  "name": "serve-directory",
  "version": "3.1.3",
  "description": "Serve directory listings",
  "repository": "fisker/serve-directory",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "scripts": {
    "build": "rollup --config",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dev": "rollup --config --watch",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "example": "cross-env DEBUG=serve-directory node example",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "format:stylelint": "yarn lint:stylelint --fix",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "lint:stylelint": "stylelint \"**/*.{css,scss,less}\"",
    "release": "run-s clean lint build test format dist",
    "test": "run-p test:*",
    "test-coverage": "nyc mocha",
    "test:js": "mocha -r esm"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "mocha": {
    "bail": true,
    "checkLeaks": true,
    "require": "esm"
  },
  "nyc": {
    "include": [
      "src/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "require": "esm"
  },
  "dependencies": {
    "accepts": "1.3.7",
    "debug": "4.1.1",
    "http-errors": "1.7.3",
    "lodash.template": "4.5.0",
    "mime-types": "2.1.25",
    "parseurl": "1.3.3"
  },
  "devDependencies": {
    "@babel/core": "7.7.5",
    "@babel/preset-env": "7.7.6",
    "@commitlint/cli": "8.2.0",
    "@fisker/commitlint-config": "1.1.4",
    "@fisker/eslint-config": "1.5.4",
    "@fisker/eslint-config-mocha": "1.1.8",
    "@fisker/husky-config": "1.1.5",
    "@fisker/lint-staged-config": "1.0.8",
    "@fisker/prettier-config": "1.0.24",
    "@fisker/stylelint-config": "1.2.0",
    "@rollup/plugin-json": "4.0.0",
    "@rollup/plugin-node-resolve": "6.0.0",
    "chai": "4.2.0",
    "cz-conventional-changelog": "3.0.2",
    "del-cli": "3.0.0",
    "eslint": "6.7.2",
    "esm": "3.2.25",
    "get-port": "5.0.0",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "markdownlint-cli": "0.19.0",
    "mocha": "6.2.2",
    "npm-run-all": "4.1.5",
    "nyc": "14.1.1",
    "open": "7.0.0",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "rollup": "1.27.11",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "sort-package-json": "1.31.0",
    "stylelint": "12.0.0",
    "supertest": "4.0.2"
  },
  "engines": {
    "node": ">= 6"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
