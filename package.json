{
  "name": "serve-directory",
  "description": "Serve directory listings",
  "version": "3.0.4",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "license": "MIT",
  "repository": "fisker/serve-directory",
  "dependencies": {
    "accepts": "^1.3.5",
    "debug": "^4.1.1",
    "http-errors": "^1.7.2",
    "lodash.template": "^4.4.0",
    "mime-types": "^2.1.22",
    "parseurl": "^1.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^5.16.0",
    "eslint-config-fisker": "^4.3.6",
    "get-port": "^5.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "markdownlint-cli": "^0.15.0",
    "mocha": "6.1.3",
    "npm-run-all": "^4.1.5",
    "opn": "^6.0.0",
    "prettier": "^1.17.0",
    "prettier-config-fisker": "^1.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.10.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "supertest": "^4.0.2"
  },
  "main": "lib/index.common.js",
  "module": "lib/index.esm.js",
  "files": ["lib"],
  "engines": {
    "node": ">= 6"
  },
  "scripts": {
    "dev": "rollup --config --watch",
    "example": "cross-env DEBUG=serve-directory node example",
    "clean": "rimraf lib",
    "build": "rollup --config",
    "dist": "npm-run-all dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "release": "npm-run-all --sequential clean lint build test dist",
    "test": "npm-run-all test:*",
    "test:js": "mocha --reporter spec --bail --check-leaks test/",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue} --fix",
    "lint:markdown": "markdownlint **/*.md --ignore \"node_modules/**\"",
    "prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  }
}
