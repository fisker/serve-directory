{
  "name": "serve-directory",
  "description": "Serve directory listings",
  "version": "3.1.1",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "license": "MIT",
  "repository": "fisker/serve-directory",
  "dependencies": {
    "accepts": "^1.3.7",
    "debug": "^4.1.1",
    "http-errors": "^1.7.2",
    "lodash.template": "^4.4.0",
    "mime-types": "^2.1.24",
    "parseurl": "^1.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@commitlint/cli": "^8.0.0",
    "@fisker/commitlint-config": "^1.0.9",
    "@fisker/eslint-config": "^1.1.1",
    "@fisker/eslint-config-mocha": "^1.0.1",
    "@fisker/lint-staged-config": "^1.0.4",
    "@fisker/prettier-config": "^1.0.17",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^5.16.0",
    "esm": "^3.2.25",
    "get-port": "^5.0.0",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "markdownlint-cli": "^0.17.0",
    "mocha": "6.1.4",
    "npm-run-all": "^4.1.5",
    "open": "^6.3.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "rollup": "^1.15.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-filesize": "^6.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.2",
    "supertest": "^4.0.2"
  },
  "main": "lib/index.common.js",
  "module": "lib/index.esm.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">= 6"
  },
  "scripts": {
    "dev": "rollup --config --watch",
    "example": "cross-env DEBUG=serve-directory node example",
    "clean": "rimraf lib",
    "build": "rollup --config",
    "dist": "npm-run-all dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "release": "npm-run-all --sequential clean lint build test dist",
    "test": "npm-run-all test:*",
    "test:js": "mocha --require esm --reporter spec --bail --check-leaks test/",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue} --fix",
    "lint:markdown": "markdownlint **/*.md --ignore \"**/node_modules/**\"",
    "prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  }
}
